<stack style="width: 454px; height: 454px; background-color: #faf8ef;">
  <div onswipe="onGridSwipe" style="width: 310px; height: 310px; left: 71px; top: 71px; background-color: #bbada0; padding: 3px; border-radius: 8px; flex-wrap: wrap;">
    <text for="{{ grid }}" style="width: 70px; height: 70px; margin: 3px; border-radius: 4px; text-align: center; padding-top: 15px; background-color: {{ cellBgColor[$item] }}; color: {{ $item<8 ? '#776e65' : '#f9f6f2' }}; font-size: {{ $item<16384 ? '30px' : '26px' }};">{{ $item!==0 ? $item : " " }}</text>
  </div>
  <text class="text-wrap" style="width: 454px; height:71px; background-color: transparent; color: #776e65; text-align: center;">当前 {{score}}\n最高 {{highScore}}</text>
  <text onswipe="onReplaySwipe" style="width: 136px; height: 43px; top: 396px; left: 158px; border-radius: 8px; background-color: #8f7a66; text-align: center; padding-top: 2px;">重来 >></text>
  <text onswipe="onLeftSideSwipe" style="width: 908px; height: 908px; left: -863px; top: -227px; border-radius: 908px; background-color: {{showLeftSideSwipe?'#cc777777':'#00000000'}}; text-align: right; padding-top: 431.5px; padding-right: 12px;">{{showLeftSideSwipe ? '《' : ""}}</text>
  <text onswipe="onTopSideSwipe" style="width: 908px; height: 908px; left: -227px; top: -863px; border-radius: 908px; background-color: {{showTopSideSwipe ? '#cc777777' : '#00000000'}}; padding-top: 865px; text-align: center;">{{showTopSideSwipe ? "关于" : ""}}</text>
</stack>